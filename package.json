{
  "name": "asked-store",
  "private": true,
  "version": "2.6.0",
  "description": "ASKED Store — Telegram Mini App (webapp + backend + shared).",
  "workspaces": [
    "webapp",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:webapp dev:backend",
    "dev:webapp": "npm --workspace webapp run dev",
    "dev:backend": "npm --workspace backend run dev",
    "build": "npm-run-all build:webapp build:backend",
    "build:webapp": "npm --workspace webapp run build",
    "build:backend": "npm --workspace backend run build",
    "lint": "npm-run-all lint:webapp lint:backend --continue-on-error",
    "lint:webapp": "npm --workspace webapp run lint --if-present",
    "lint:backend": "npm --workspace backend run lint --if-present",
    "test": "echo \"(TODO: добавить тесты)\"",
    "version:major": "node scripts/bump-version.cjs major",
    "version:minor": "node scripts/bump-version.cjs minor",
    "version:patch": "node scripts/bump-version.cjs patch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}


